CREATE DATABASE crm
CHARACTER SET utf8mb4
COLLATE utf8mb4_unicode_ci;

USE crm;

SET SQL_MODE='ALLOW_INVALID_DATES';

CREATE TABLE customers(
  id INT(11) AUTO_INCREMENT,
  firstName VARCHAR(255),
  lastName VARCHAR(255),
  birthDate DATE,
  PRIMARY KEY (id)
);

CREATE TABLE employees(
    id int(11) AUTO_INCREMENT,
    firstName VARCHAR(255),
    lastName VARCHAR(255),
    address VARCHAR(255),
    telephoneNumber VARCHAR(50),
    note VARCHAR(255),
    manHour FLOAT,
    PRIMARY KEY (id)
);

CREATE TABLE vehicles(
    id INT(11) AUTO_INCREMENT,
    brand VARCHAR(255),
    model VARCHAR(255),
    productionYear YEAR NOT NULL,
    registrationNumber VARCHAR(255),
    nextReview TIMESTAMP NULL DEFAULT NULL,
    ownerId INT(11),
    PRIMARY KEY (id),
    FOREIGN KEY (ownerId) REFERENCES customers(id)
);

CREATE TABLE statuses(
  id INT(11) AUTO_INCREMENT,
  accepted TINYINT(1),
  approvedRepairCosts TINYINT(1),
  inRepair TINYINT(1),
  readyForPickup TINYINT(1),
  resignation TINYINT(1),
  PRIMARY KEY (id)
);

CREATE TABLE orders(
  id INT(11) AUTO_INCREMENT,
  acceptanceForRepair TIMESTAMP,
  plannedStartOfRepair TIMESTAMP,
  startingRepair TIMESTAMP,
  assignedForRepairId INT(11),
  problemDescription VARCHAR(255),
  repairDescription VARCHAR(255),
  actualStatusId INT(11),
  repairedVehicleId INT(11),
  costOfUsedParts FLOAT,
  manHour FLOAT,
  numberOfManHour INT(11),
  PRIMARY KEY (id),
  FOREIGN KEY (assignedForRepairId) REFERENCES employees(id),
  FOREIGN KEY (actualStatusId) REFERENCES statuses(id),
  FOREIGN KEY (repairedVehicleId) REFERENCES vehicles(id)
);



